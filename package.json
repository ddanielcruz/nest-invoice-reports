{
  "name": "nestjs-invoice-reports",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:unit": "npm test -- -c jest-unit.config.mjs",
    "test:unit:watch": "npm test -- -c jest-unit.config.mjs --watch",
    "test:e2e": "npm test -- -c jest-e2e.config.mjs",
    "test:e2e:watch": "npm test -- -c jest-e2e.config.mjs --watch",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky install",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.1",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/platform-express": "^10.3.1",
    "@prisma/client": "^5.8.1",
    "bcryptjs": "^2.4.3",
    "nestjs-zod": "^3.0.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.5.0",
    "@commitlint/config-conventional": "^18.5.0",
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.1",
    "@rocketseat/eslint-config": "^2.1.0",
    "@testcontainers/postgresql": "^10.6.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
